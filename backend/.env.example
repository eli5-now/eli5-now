# LLM Provider: "openai" or "anthropic"
LLM_PROVIDER=openai

# LLM API Key (for the selected provider)
LLM_API_KEY=sk-...

# LLM Model
LLM_MODEL=gpt-4o

# Maximum total tokens for prompt context (including system, history, question, and response buffer)
MAX_TOKENS=2048
# Reserved tokens for the model's response within the total MAX_TOKENS budget
RESPONSE_TOKEN_BUFFER=1500

# OpenAI API key for Whisper speech-to-text (can be same as LLM_API_KEY)
TTS_API_KEY=sk-...
